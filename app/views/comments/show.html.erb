<h2>Comments</h2>

<% @comment.posts.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.poster %>
  </p>
 
  <p>
    <strong>post:</strong>
    <%= comment.comments_id%>
  </p>
<% end %>
 
<h2>Add a comment:</h2>
<%= form_for([@comment, @comment.posts.build]) do |f| %>
  <p>
    <%= f.label :comment %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :post %><br>
    <%= f.text_area :post_id %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
 
<%= link_to 'Back', comments_path %>
